@{
    ViewData["Title"] = "Vote";
    var song = ViewBag.Song as EUSong.Models.Song;
}

<h2>Vote for "@song.Title"</h2>

<form asp-action="Create" method="post">
    <input type="hidden" name="songId" value="@song.Id" />

    <div class="form-group mb-3">
        <label>Enter your vote (1 to 12):</label>
        <input type="number" name="value" class="form-control" min="1" max="12" required />
    </div>

    <button type="submit" class="btn btn-success">Submit Vote</button>
    <a asp-controller="Song" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
