@model EUSong.Models.ProfileViewModel

@{
    ViewData["Title"] = "Your Profile";
}

<div class="hero">
    <div class="container">
        <h1 class="display-4 text-white">Your Profile</h1>
        <p class="lead text-white">Here are your votes and comments</p>
    </div>
</div>

<div class="container mt-4 text-white">

    <h3>Your Votes</h3>
    @if (!Model.Votes.Any())
    {
        <p class="text-muted">You haven't voted yet.</p>
    }
    else
    {
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th>Song</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var v in Model.Votes)
                {
                    <tr>
                        <td>@v.SongTitle</td>
                        <td>@v.Value</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <h3 class="mt-5">Your Comments</h3>
    @if (!Model.Comments.Any())
    {
        <p class="text-muted">You haven't left any comments yet.</p>
    }
    else
    {
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th>Song</th>
                    <th>Comment</th>
                    <th>Rating</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model.Comments)
                {
                    <tr>
                        <td>@c.SongTitle</td>
                        <td>@c.Text</td>
                        <td>@c.Rating</td>
                        <td>@c.Timestamp.ToString("g")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
