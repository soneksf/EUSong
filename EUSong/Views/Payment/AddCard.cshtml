<h2>Add Credit Card</h2>

@if (TempData["ErrorMessage"] != null)
{
    <p style="color:red">@TempData["ErrorMessage"]</p>
}

<form asp-action="AddCard" method="post">
    <label>Card Number:</label><br />
    <input name="cardNumber" required /><br />

    <label>Expiry Date (MM/YY):</label><br />
    <input name="expiryDate" required /><br />

    <label>CVV:</label><br />
    <input name="cvv" required /><br /><br />

    <button type="submit">Save Card</button>
</form>
