@{
    ViewData["Title"] = "Import Results";
}

<h2>@ViewData["Title"]</h2>

<p class="alert alert-success">
    Imported @ViewBag.ImportedCount songs successfully.
</p>

@if (ViewBag.Errors != null && ((List<string>)ViewBag.Errors).Any())
{
    <div class="alert alert-warning">
        <h5>Some rows failed to import:</h5>
        <ul>
            @foreach (var err in (List<string>)ViewBag.Errors)
            {
                <li>@err</li>
            }
        </ul>
    </div>
}

<a asp-action="Index" class="btn btn-primary">Back to Manage Songs</a>
