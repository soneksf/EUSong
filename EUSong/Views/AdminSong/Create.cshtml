@model EUSong.Models.Song

<h2>Add Song</h2>

<form asp-action="Create" method="post">
    <label>Title:</label>
    <input asp-for="Title" /><br />

    <label>Singer:</label>
    <input asp-for="Singer" /><br />

    <label>Year:</label>
    <input asp-for="Year" /><br />

    <label>Country:</label>
    <input asp-for="Country" /><br />

    <label>Description:</label>
    <textarea asp-for="Description"></textarea><br />

    <button type="submit">Save</button>
</form>
