@model IEnumerable<EUSong.Models.User>
@{
    ViewData["Title"] = "Manage Users";
    var currentId = ViewBag.CurrentUserId as int?;
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Username</td>
                <td>@u.Email</td>
                <td>@u.Role</td>
                <td>
                    @if (u.Id != currentId)
                    {
                        <a asp-action="Delete"
                           asp-route-id="@u.Id"
                           class="btn btn-danger btn-sm">
                            Delete
                        </a>
                    }
                    else
                    {
                        <span class="text-muted">Cannot delete self</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
