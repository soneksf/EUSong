@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Voting Results";
    int top = ViewBag.Top ?? 10;
    int? year = ViewBag.Year;
}

<h2>@ViewData["Title"]</h2>

<form method="get" asp-action="Results" class="row g-2 mb-4">
    <!-- Top-N selector -->
    <div class="col-md-2">
        <select name="top" class="form-select">
            @foreach (var opt in new[] { 3, 5, 10, 20 })
            {
                if (opt == top)
                {
                    <option value="@opt" selected>Top @opt</option>
                }
                else
                {
                    <option value="@opt">Top @opt</option>
                }
            }
        </select>
    </div>

    <!-- Year filter -->
    <div class="col-md-3">
        <input type="number"
               name="year"
               value="@(year?.ToString() ?? "")"
               class="form-control"
               placeholder="Year (optional)" />
    </div>

    <!-- Submit button -->
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary w-100">Show</button>
    </div>
</form>

@if (!Model.Any())
{
    <p class="text-center text-muted">No results found.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-light">
            <tr>
                <th>Rank</th>
                <th>Title</th>
                <th>Singer</th>
                <th>Country</th>
                <th>Total Points</th>
            </tr>
        </thead>
        <tbody>
            @{
                int rank = 1;
                foreach (var item in Model)
                {
                    var song = (EUSong.Models.Song)item.Song;
                    <tr>
                        <td>@rank</td>
                        <td>@song.Title</td>
                        <td>@song.Singer</td>
                        <td>@song.Country</td>
                        <td>@item.TotalPoints</td>
                    </tr>
                    ;
                    rank++;
                }
            }
        </tbody>
    </table>
}
