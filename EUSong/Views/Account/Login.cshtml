<h2>Login</h2>

<form asp-action="Login" method="post">
    <label>Email</label>
    <input name="email" />
    <br />
    <label>Password</label>
    <input name="password" type="password" />
    <br />
    <button type="submit">Login</button>
</form>

@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}
